<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DialogBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
 <RelativeLayout                                    
           android:layout_height="wrap_content"          
           android:layout_width="wrap_content"
           android:orientation="vertical"                
 >
  <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:id="@+id/BottomButtons"             
             android:layout_alignParentBottom="true"
  >
        <Button
            android:id="@+id/OK"                        
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/OK"
            android:layout_gravity="center_vertical"
             	 android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
        />
        <Button
            android:id="@+id/Cancel"                       
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:layout_gravity="center_vertical"
             	 android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
        />
        <Button
            android:id="@+id/Help"                       
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Help"
            android:layout_gravity="center_vertical"
             	 android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
        />
  </LinearLayout> <!-- bottom buttons-->
  <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical"
             android:layout_alignParentTop="true"
             android:layout_above="@id/BottomButtons"
  >	<!-- all above bottom buttons-->
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
    />  <!--dummy for avaoid ime popup-->
    <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
    >
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical"
    >
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapLance1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Lance"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
            <CheckBox
                android:id="@+id/HandicapLance2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Lance"
	            android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapKnight1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Knight"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
            <CheckBox
                android:id="@+id/HandicapKnight2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Knight"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapSilver1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Silver"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
            <CheckBox
                android:id="@+id/HandicapSilver2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Silver"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapGold1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Gold"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
            <CheckBox
                android:id="@+id/HandicapGold2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Gold"
    	        android:layout_weight="1"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapBishop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Bishop"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <CheckBox
                android:id="@+id/HandicapRook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PieceName_Rook"
    	        android:textSize="12sp"
    	        android:button="@xml/checkbox_mdpi"
            />
    	</LinearLayout>
     <!-- set default -->
        <TextView
             android:text="@string/LabelSetStandard"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent"
        />                                         
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
            <TextView
                 android:text="@string/LabelRankDiff"
             	 android:layout_height="wrap_content"
             	 android:layout_width="fill_parent"
                 android:layout_weight="1"
    	        android:textSize="12sp"
            />                                         
            <EditText
                 android:id="@+id/EditTextRankDiff"  
                 android:text="10"
             	 android:layout_height="wrap_content"
             	 android:layout_width="fill_parent"
                 android:layout_weight="1"
	            android:inputType="number"
    	        android:textSize="12sp"
            />                                         
            <Button
                android:id="@+id/RankDiffChange"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/RankDiffChange"
                android:layout_gravity="center_vertical"
             	 android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
            />
            <Button
                android:id="@+id/RankDiffSetDefault"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/RankDiffSetDefault"
                android:layout_gravity="center_vertical"
             	 android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
            />
    	</LinearLayout>
    </LinearLayout><!-- one view hosted in scrollview-->
    </ScrollView>
  </LinearLayout>	<!-- all above bottom buttons-->
 </RelativeLayout>                                    
</LinearLayout>
