<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                        android:layout_gravity="right"
    >
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:text="@string/SelectDialogLabelSettings"
                        />
                    <Button
                        android:id="@+id/NFCSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SelectDialogWifiNFCSettings"
                    />
                    <!--    android:layout_gravity="right" -->
                    <Button
                        android:id="@+id/WiFiSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SelectDialogWiFiSettings"
                    />  <!--1AbC-->
                    <Button
                        android:id="@+id/BluetoothSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BluetoothSettingsButton"
                    />                      <!--1Abp-->
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"/>  <!--gap-->
                        <TextView
                            android:layout_height="wrap_content"
					        android:layout_width="fill_parent"
                            android:text="@string/SelectNFCHandover"
                            android:id="@+id/HandoverMsg"
        android:visibility="gone"
                        />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="5dp"/>  <!--gap-->
                        <TextView
                            android:layout_height="wrap_content"
					        android:layout_width="fill_parent"
                            android:text="@string/LabelHandoverType"
                        />
                        <RadioGroup
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
					        android:layout_width="fill_parent"
                            android:id="@+id/NFCHandoverRG"
                            android:background="#ff404040"
                            >
                            <RadioButton
                                android:id="@+id/NFCHandoverIP"
					            android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/NFCHandoverIP"
                            android:layout_weight="1"
                            />     
                            <RadioButton
                                android:id="@+id/NFCHandoverBTSecure"
					            android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/NFCHandoverBTSecure"
                            android:layout_weight="1"
                            />     
                            <RadioButton
                                android:id="@+id/NFCHandoverBTInSecure"
					            android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/NFCHandoverBTInSecure"
                            android:layout_weight="1"
                            />     
                        </RadioGroup> 
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>  <!--gap-->
    <LinearLayout
            android:id="@+id/DialogButtons"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/Close"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/OK"
                        android:layout_weight="1"
                    />
                    <Button
                        android:id="@+id/Cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Cancel"
                        android:layout_weight="1"
                    />
                    <Button
                        android:id="@+id/Help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Help"
                        android:layout_weight="1"
                    />
    </LinearLayout>
</LinearLayout>
