<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
    >               <!-- use custom title for small height case-->
        <TextView                 
            android:text="MdpiTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CustomTitle"
            android:layout_gravity="center_vertical|left"
            android:textSize="16sp"
            android:visibility="gone"
        />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:gravity="center_vertical"
        android:background="#ff0080ff"
    />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:gravity="right"
    ><!--1Ad3-->
       <!-- android:layout_width="wrap_content--><!--1Ad5-->
       <!--             android:layout_gravity="right" --><!--1Ad5-->
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                            android:text="@string/SelectDialogLabelSettings"
                        />
                    <Button
                        android:id="@+id/NFCSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SelectDialogWifiNFCSettings"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/WiFiSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SelectDialogWiFiSettings"
            android:background="@android:drawable/btn_default_small"
                    />
    </LinearLayout>
        <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
        >
                <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                        android:layout_gravity="bottom"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="@string/label_me" />
                    />
            	</LinearLayout>
                <!--LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="right"
                     android:visibility="gone"
                >
                    <Button
                        android:id="@+id/WifiNFCSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
                        android:text="@string/WifiNFCSettings" />
                     android:visibility="gone"
			    </LinearLayout-->	<!--1Ad3-->
		</LinearLayout>	
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="#ff0080ff" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/DeviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.4"
            android:textSize="18sp"
        />
        <TextView
            android:id="@+id/DeviceAddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.4"
            android:textSize="16sp"

        />
        <TextView
            android:id="@+id/DeviceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.2"
            android:textSize="14sp"
            android:textColor="#ffc0c000"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ThisIPLine"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NFCLabelIP" />
        />
        <TextView
            android:id="@+id/ThisIPAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff6000"
        />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="#ff0080ff" />
    <LinearLayout
            android:id="@+id/UpperButtons"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
                        android:gravity="center_vertical"
    >
        <Button
            android:id="@+id/IPAccept"
            android:text="@string/AcceptIPConnection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                 android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
        />
        <Button
            android:id="@+id/IPConnect"
            android:text="@string/IPConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                 android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
        />
        <Button
            android:id="@+id/IPGame"
            android:text="@string/IPGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                 android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
        />
        <Button
            android:id="@+id/IPDisconnect"
		    android:text="@string/disconnect_peer_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                 android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
	    <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
    	>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LabelPeer" />
            />
	    </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="#ff0080ff" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/PeerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.4"
            android:textSize="18sp"
        />
        <TextView
            android:id="@+id/PeerAddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.4"
            android:textSize="16sp"

        />
        <TextView
            android:id="@+id/PeerStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
                        android:layout_weight="0.2"
            android:textSize="14sp"
            android:textColor="#ffc0c000"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/PeerIPLine"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NFCLabelIP" />
        />
        <TextView
            android:id="@+id/PeerIPAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff6000"
        />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:gravity="center_vertical"
        android:background="#ff0080ff" />
    <ScrollView
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
             android:layout_weight="1"
         android:fillViewport="true"
    >
    <!--1Ac0 ">" line was deleted -->
        <TextView
            android:id="@+id/Msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ff000000"
            android:background="#ffffff90"
        android:scrollbars="vertical"
        android:layout_marginTop="1dp"
        />
    </ScrollView>


    <LinearLayout
            android:id="@+id/DialogButtons"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/Cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Cancel"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/Help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Help"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
    </LinearLayout>
</LinearLayout>
